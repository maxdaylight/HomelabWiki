# HomelabWiki Environment Configuration
# Copy this file to .env and fill in your values

# Flask Application
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_ENV=production

# Database Configuration
DATABASE_URL=postgresql://wiki_user:your-password@database:5432/homelab_wiki
POSTGRES_DB=homelab_wiki
POSTGRES_USER=wiki_user
POSTGRES_PASSWORD=your-secure-database-password

# LDAP/Active Directory Configuration
LDAP_SERVER=WYK-DC01
LDAP_PORT=389
LDAP_BASE_DN=DC=homelab,DC=local
LDAP_BIND_DN=CN=wikisvc,CN=Users,DC=homelab,DC=local
LDAP_BIND_PASSWORD=your-ldap-service-account-password
LDAP_USER_SEARCH_BASE=CN=Users,DC=homelab,DC=local
LDAP_GROUP_SEARCH_BASE=CN=Groups,DC=homelab,DC=local

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=/app/uploads

# Security Settings
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax
